<UserControl x:Class="GmudGen.Pages.Notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Unloaded="UserControl_Unloaded">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Notification" Style="{StaticResource Heading2}" />
                <TextBlock Text="Cadastrar os emails dos contatos da GMUD" />
                <TextBox Name="tbContacts" Height="150" TextWrapping="Wrap" AcceptsReturn="True" Margin="0 10 0 0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
